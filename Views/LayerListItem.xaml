<UserControl x:Class="Mapsui.Samples.Wpf.LayerListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="226" d:DesignWidth="309">
    <StackPanel Orientation="Horizontal"  VerticalAlignment="Top" HorizontalAlignment="Right">
        <TextBlock Margin="6" x:Name="TextBlock">Text</TextBlock>
        <CheckBox x:Name="EnabledCheckBox" Margin="0,6,6,6" VerticalAlignment="Center" HorizontalAlignment="Center" Click="EnabledCheckBoxClick"></CheckBox>
        <Slider x:Name="OpacitySlider" Width="100" VerticalAlignment="Center" HorizontalAlignment="Right" Minimum="0" Maximum="1"  ValueChanged="OpacitySliderValueChanged"></Slider>
        <xctk:ColorPicker x:Name="ColorSelector" 
                          Background="{x:Null}" 
                          SelectedColor="Black"
                          SelectedColorChanged="SelectedColorChanged" MaxWidth="50"/>
        
    </StackPanel>
</UserControl>
