<Page x:Class="Mapper_v1.Views.ProjectionDialogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mapper_v1.Views" 
      xmlns:viewmodels="clr-namespace:Mapper_v1.ViewModels" 
      d:DataContext="{d:DesignInstance Type=viewmodels:ProjectionDialogViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="200"
      Title="ProjectionDialogPage">

    <Grid>
        <Label Content="to add projection, please paste WKT (Well Known Text format) here." 
               Foreground="{StaticResource MahApps.Brushes.DataGrid.Selection.Text}"
               IsHitTestVisible="False"
               Background="Transparent" Margin="5,0">
            <Label.Style>
                <Style TargetType="Label">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=InputTextBox, Path=Text.IsEmpty}" Value="false">
                            <Setter Property="Visibility" Value="Hidden"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=InputTextBox, Path=IsFocused}" Value="true">
                            <Setter Property="Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>
        <TextBox Name="InputTextBox" Text="{Binding ProjectionWkt}" 
                 TextWrapping="Wrap" Panel.ZIndex="-1" 
                 Background="{StaticResource MahApps.Brushes.Gray10}" 
                 BorderThickness="0"/>
    </Grid>
</Page>
