<Page
    x:Class="Mapper_v1.Views.DataDisplayDialogPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:properties="clr-namespace:Mapper_v1.Properties"
    xmlns:mahApps="http://metro.mahapps.com/winfx/xaml/controls"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="1"
            Margin="{StaticResource MediumLeftRightMargin}"
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
                <TextBlock Text="Available Data:" Style="{StaticResource ListTitleStyle}" 
                           Grid.Column="0" Grid.Row="0"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <ListView Grid.Column="0" Grid.Row="1"
                x:Name="AvailableListView"
                ItemsSource="{Binding AvailableItems}"
                SelectedItem="{Binding SelectedAvailableItem}"
                Margin="{StaticResource XSmallLeftRightMargin}"
                Background="{DynamicResource MahApps.Brushes.Gray10}"
                BorderBrush="{StaticResource MahApps.Brushes.Accent4}"
                BorderThickness="2"
                MouseDoubleClick="AvailableListView_MouseDoubleClick">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            
            <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <Button Command="{Binding MoveToSelectedCommand}" Margin="0,10">
                    <TextBlock Text="&#xE72A;" FontFamily="Segoe MDL2 Assets"/>
                </Button>
                <Button Command="{Binding MoveToAvailableCommand}" Margin="0,10">
                    <TextBlock Text="&#xE72B;" FontFamily="Segoe MDL2 Assets"/>
                </Button>
            </StackPanel>
                <TextBlock Grid.Column="2" Grid.Row="0"
                    Text="Selected Data:" Style="{StaticResource ListTitleStyle}" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <ListView Grid.Column="2" Grid.Row="1"
                x:Name="SelectedListView"
                BorderBrush="{StaticResource MahApps.Brushes.Accent4}"
                BorderThickness="2"
                Margin="{StaticResource XSmallLeftRightMargin}"
                ItemsSource="{Binding SelectedItems}"
                SelectedItem="{Binding SelectedSelectedItem}"
                MouseDoubleClick="SelectedListView_MouseDoubleClick"
                AllowDrop="True"
                PreviewMouseLeftButtonDown="SelectedListView_PreviewMouseLeftButtonDown"
                PreviewMouseMove="SelectedListView_PreviewMouseMove"
                Drop="SelectedListView_Drop"
                DragOver="SelectedListView_DragOver">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="2" 
                        HorizontalAlignment="Center" Margin="{StaticResource SmallTopBottomMargin}" 
                        DataContext="{Binding SelectedSelectedItem}">
                <CheckBox IsChecked="{Binding Highlight}" Margin="{StaticResource MediumLeftMargin}"/>
                <TextBlock Text="Bold" VerticalAlignment="Center"/>
                <mahApps:ColorPicker Width="50" SelectedColor="{Binding Color}" Margin="{StaticResource MediumLeftRightMargin}"/>
                <TextBlock Text="Decimal Places:" VerticalAlignment="Center"/>
                <ComboBox Width="60" Margin="{StaticResource MediumLeftRightMargin}"
                          SelectedItem="{Binding DecimalPlaces}" 
                          ItemsSource="{Binding DecimalPlacesOptions}"
                          HorizontalAlignment="Left">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
